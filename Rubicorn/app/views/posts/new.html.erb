<h1>Feedback: Tell us what you think of SalesCall! (criticisms will be routed to /dev/null)</h1>


<%= form_for :post, url: posts_path do |f| %>
    <%= image_tag("rubicorn.png") %>
    <% if @post.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited
            this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit("Send Feedback") %>
    </p>
<% end %>

<%= link_to 'Back to posts list', posts_path %>